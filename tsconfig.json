{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "baseUrl": "./src",
    "paths": {
      "@components*": ["components/*"],
      "@hooks*": ["hooks/*"],
      "@/styles/*": ["styles/*"],
      "@state*": ["state/*"],
      "@config*": ["config/*"],
      "@global*": ["global/*"],
      "@/utils/*": ["utils/*"],
      "@pages*": ["pages/*"],
      "@models*": ["models/*"]
    },
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx"
  },
  "include": ["**/*.ts", "**/*.tsx", "src/hooks/useApi.js"]
  // "include": ["src", "global"]
}
